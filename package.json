{
  "name": "tasks-collab",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:create":"npm run typeorm -- migration:create ./apps/auth-service/src/db/migrations/$npm_config_name",
    "migration:run":"npm run typeorm migration:run -- -d ./apps/auth-service/src/db/typeOrm.migration-config.ts",
    "migration:revert":"npm run typeorm migration:revert -- -d ./apps/auth-service/src/db/db.module.ts"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
